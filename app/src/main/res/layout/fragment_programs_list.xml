<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.CoordinatorLayout
        android:background="@color/pure_white"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.amagesoftware.vestibio.tools.EmptyRecyclerView
            android:id="@+id/rvPrograms"
            android:scrollbars="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.github.clans.fab.FloatingActionButton
            android:id="@+id/fabNew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:fab_colorNormal="@color/themeGradientDark"
            app:fab_colorPressed="@color/themeGradientLight"
            android:layout_marginBottom="12dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/fab_add"
            app:fab_elevationCompat="4dp"/>

    </android.support.design.widget.CoordinatorLayout>

    <include android:id="@+id/viewPlayback"
        android:visibility="gone"
        layout="@layout/song_playback_view"></include>

</RelativeLayout>