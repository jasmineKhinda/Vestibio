<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_gradient_drawable">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/linear_gradient_drawable"
        android:animateLayoutChanges="true"

        android:orientation="vertical" >


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/graphCard40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            android:background="@color/themeGradientLighter_background"


            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="@string/graph_nodata"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/themeGradientLighter_background"
                    android:id="@+id/textgraph40"
                    android:alpha="1"
                    android:textSize="23dp"

                    />

                <com.jjoe64.graphview.GraphView
                    android:layout_gravity="center"
                    android:id="@+id/graph40"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_alignTop="@id/textgraph40"
                    android:layout_marginRight="0dp"
                    android:background="@color/themeGradientLighter_background"
                    android:alpha="0.2"


                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/graphDizzyCard40"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            card_view:cardCornerRadius="3dp"
            card_view:cardElevation="3dp"
            android:background="@color/themeGradientLighter_background"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:text="@string/graph_nodata"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@color/themeGradientLighter_background"
                    android:id="@+id/textGraphDizzy40"
                    android:alpha="1"
                    android:textSize="23dp"

                    />

                <com.jjoe64.graphview.GraphView
                    android:layout_gravity="center"
                    android:id="@+id/graphDizzy40"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    android:layout_marginRight="0dp"
                    android:background="@color/themeGradientLighter_background"
                    android:alpha="0.2"
                    />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graphCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:background="@color/themeGradientLighter_background"


        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="@string/graph_nodata"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/themeGradientLighter_background"
                android:id="@+id/textgraph"
                android:alpha="1"
                android:textSize="23dp"

                />

            <com.jjoe64.graphview.GraphView
                android:layout_gravity="center"
                android:id="@+id/graph"
                android:layout_width="wrap_content"
                android:layout_height="300dp"
                android:layout_alignTop="@id/textgraph"
                android:layout_marginRight="0dp"
                android:background="@color/themeGradientLighter_background"
                android:alpha="0.2"

                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>



        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/graphDizzyCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        card_view:cardCornerRadius="3dp"
        card_view:cardElevation="3dp"
        android:background="@color/themeGradientLighter_background"
            >


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:text="@string/graph_nodata"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@color/themeGradientLighter_background"
                android:id="@+id/textGraphDizzy"
                android:alpha="1"
                android:textSize="23dp"

                />

        <com.jjoe64.graphview.GraphView
            android:layout_gravity="center"
            android:id="@+id/graphDizzy"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_marginRight="0dp"
            android:background="@color/themeGradientLighter_background"
            android:alpha="0.2"
            />
            </RelativeLayout>
    </android.support.v7.widget.CardView>
    </LinearLayout>
</ScrollView>