<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="android:colorPrimary">@color/primary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="android:colorPrimaryDark">@color/primary_dark</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="android:colorAccent">@color/accent</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:colorControlNormal">@color/theme200</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:colorButtonNormal">@color/primary</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:windowBackground">@color/background</item>
    </style>
    <style name="AppDonateTheme" parent="Theme.AppCompat.Dialog.MinWidth">

        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:textColor">@color/grey_800</item>

        <item name="colorButtonNormal">@color/themeGradientPrimary</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:colorControlNormal" >@color/primary</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:background">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>


    </style>




    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="WhiteEditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/theme50</item>
        <item name="android:textColorHint">@color/theme200</item>
        <item name="android:textColorSecondary">@color/theme200</item>
        <item name="android:colorControlNormal">@color/theme50</item>
        <item name="colorControlActivated">@color/theme200</item>
        <item name="colorControlHighlight">@color/theme200</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textColorHint">@color/hint_text</item>
        <item name="android:textColorSecondary">@color/theme300</item>
        <item name="android:colorControlNormal">@color/primary</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
    </style>

    <style name="CardViewStyle" parent="CardView.Light">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:textColor">@drawable/text_selector</item>
    </style>

    <style name="MetronomeButton" parent="@android:style/Widget.Material.Button.Borderless">
        <item name="android:textColor">@drawable/text_selector_inverted</item>
        <item name="android:background">@drawable/background_transparent_select</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Dialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowNoTitle">false</item>
        <item name="android:windowIsFloating">true</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Holo.Light.Dialog">
        <item name="android:windowTitleStyle">@style/dialog_title</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:divider">@color/themeGradientPrimary</item>
        <item name="android:headerDividersEnabled">false</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="dialog_title" parent="android:Widget.TextView">
        <item name="android:background">@color/themeGradientPrimary</item>
        <item name="android:textAppearance">@android:style/TextAppearance.DialogWindowTitle</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">21sp</item>
        <item name="android:textColor">@color/pure_white</item>
        <item name="android:divider">@color/themeGradientPrimary</item>

    </style>

    <style name="RestoreDialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:progressBarStyleHorizontal">@style/ProgressBarStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="android:textColor">@color/grey_800</item>
        <item name="android:textColorPrimary">@color/grey_800</item>
        <item name="android:background">@color/background</item>
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        <item name="android:textColorAlertDialogListItem">@color/grey_800</item>

        <item name="colorPrimary">@color/themeGradientPrimary</item>
        <item name="colorPrimaryDark">@color/themeGradientDark</item>
        <item name="colorAccent">@color/accent</item>

    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->

    </style>

    <style name="AppDonateHeaderTheme" parent="android:Theme.Holo.Light.Dialog.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:spinnerDropDownItemStyle">@style/mySpinnerItemStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="android:background">@color/background</item>
        <item name="android:buttonStyle">@style/DonateButton</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackground">@color/background</item>


    </style>
</resources>
